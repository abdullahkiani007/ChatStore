{
  "manifest_version": 3,
  "name": "Chat Store",
  "version": "1.0",
  "description": "Save and open your favorite chat links quickly.",
  "action": {
    "default_icon": {"16":"icons/icon.png"},
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://chat.openai.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/delete.png", "ui/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://chatgpt.com/*", "*://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ]
}
