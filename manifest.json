{
  "manifest_version": 2,
  "name": "Chat Store",
  "version": "1.0",
  "description": "Save and open your favorite chat links quickly.",
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["*://chatgpt.com/*", "*://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ]
}
