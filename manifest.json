{
  "manifest_version": 3,
  "name": "Chat Store",
  "version": "2.0",
  "description": "Save and open your favorite chat links quickly.",
  "action": {
    "default_icon": { "16": "icons/icon.png" }
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://chat.openai.com/*",
    "*://gemini.google.com/*",
    "*://chat.deepseek.com/*",
    "*://claude.ai/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/delete.png", "ui/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "chatstore@abdullah.com",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://chat.openai.com/*",
        "*://gemini.google.com/*",
        "*://chat.deepseek.com/*",
        "*://claude.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
